---
const {
  title = "Cristian Narváez (Diseñador UX)",
  description = "Portafolio de Cristian Narváez — Diseñador UX. Proyectos, experiencia y contacto.",
  image = "/profilePhoto.webp",
  canonical = undefined,
} = Astro.props;

const siteOrigin = import.meta.env.SITE ? String(import.meta.env.SITE).replace(/\/$/, '') : 'https://uxcristian.site';
const imageUrl = siteOrigin ? new URL(image, siteOrigin).toString() : image;

const pageUrl = canonical
  ? (canonical.startsWith('http') ? canonical : siteOrigin ? new URL(canonical, siteOrigin).toString() : canonical)
  : siteOrigin || undefined;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/meta_icon.webp" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    {pageUrl ? <link rel="canonical" href={pageUrl} /> : null}

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Cristian Narváez" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:alt" content="Foto de perfil de Cristian Narváez" />
    {pageUrl ? <meta property="og:url" content={pageUrl} /> : null}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <!-- Optionally add twitter:site and twitter:creator if provided in site config -->

    <!-- JSON-LD (Person) -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Cristian Narváez",
        url: siteOrigin || undefined,
        image: imageUrl || undefined,
        jobTitle: "Diseñador UX",
        description,
        sameAs: [
          "https://www.linkedin.com/in/cristian-narvaez/"
        ]
      })}
    </script>

  <script src="/hotjar.js" async></script>
  </head>
  <body class="bg-primary-100 font-sans">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
