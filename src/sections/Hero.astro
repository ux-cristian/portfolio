---
import TyperwriterEffect from "../components/TyperwriterEffect.astro";
import Container from "../layouts/Container.astro";
import Button from "../uikit/atoms/Button.astro";
---

<section class="flex mt-24 py-16 md:py-20 xl:py-28 w-full bg-gradient-to-t from-primary-200 to-primary-100">
  <Container>
    <div class="flex flex-col w-full gap-4 md:gap-5 xl:gap-6 items-center text-gray-800">
      <h2 class="text-center tracking-widest text-lg md:text-xl xl:text-2xl">¡HOLA! SOY CRISTIAN NARVAEZ</h2>
      <h1 class="text-center font-medium text-5xl md:text-6xl xl:text-7xl">Diseñador UX</h1>
      <span class="text-center text-2xl md:text-3xl xl:text-4xl">¿List@ para que</span>
      <div class="flex items-center justify-center gap-2">
        <TyperwriterEffect words={["imaginemos", "diseñemos", "implementemos"]}/>
        <span class="text-center text-2xl md:text-3xl xl:text-4xl">?</span>
      </div>
      <div class="mt-8">
        <Button>¡Hablemos!</Button>
      </div>
    </div>
  </Container>
</section>