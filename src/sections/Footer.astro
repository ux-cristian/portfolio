---
import Container from "../layouts/Container.astro";
import IconButton from "../uikit/atoms/IconButton.astro";

import BehanceIcon from "../assets/behance.svg";
import LinkedinIcon from "../assets/linkedin.svg";
import EmailIcon from "../assets/email.svg";
import LogoIcon from "../assets/logo_footer.svg";
---

<section class="flex w-full bg-primary-600 py-16 md:py-20 xl:py-28">
  <Container>
    <div class="flex w-full flex-col gap-3 xl:gap-6">
      <LogoIcon class="h-12 xl:h-16 fill-primary-50 mx-auto my-4"/>
      <div class="flex w-full justify-center gap-4">
        <IconButton><BehanceIcon class="fill-primary-50 md:w-7 md:h-7 xl:w-9 xl:h-9"/></IconButton>
        <IconButton><LinkedinIcon class="fill-primary-50 md:w-7 md:h-7 xl:w-9 xl:h-9"//></IconButton>
        <IconButton><EmailIcon class="fill-primary-50 md:w-7 md:h-7 xl:w-9 xl:h-9"//></IconButton>
      </div>
      <span class="mt-4 text-sm text-primary-50 text-center">© 2025 Cristian Narváez. Todos los derechos reservados.</span>
    </div>
  </Container>
</section>
