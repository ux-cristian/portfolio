---
interface Props {
  type?: 'solid' | 'outline';
  href?: string;
  target?: '_blank' | '_self';
}

const { type = 'solid', href, target = '_self' } = Astro.props;

const variants = {
  solid: "bg-primary-600 text-primary-50 hover:bg-primary-700 focus:bg-primary-700",
  outline: "border-primary-600 border-2 text-primary-600 hover:bg-primary-50 focus:bg-primary-50"
};

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  target={target}
  type={!href ? "button" : undefined}
  class={`font-brand font-semibold text-base md:text-lg xl:text-xl py-3 px-6 md:py-3.5 md:px-7 xl:py-4 xl:px-8 w-fit inline-flex items-center gap-2 rounded-full cursor-pointer border ${type === 'outline' ? 'border-current' : 'border-transparent'} ${variants[type]} disabled:opacity-50`}
>
  <slot/>
</Element>
