---
interface Props {
  variant?: 'solid' | 'outline';
  href?: string;
  target?: '_blank' | '_self';
}

const { variant = 'solid', href, target = '_self' } = Astro.props;

const variants = {
  solid: "bg-primary-600 text-primary-50 hover:bg-primary-700 focus:bg-primary-700",
  outline: "border-primary-600 border-2 text-primary-600 hover:bg-primary-200 focus:bg-primary-100"
};

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  target={target}
  type={!href ? "button" : undefined}
  class={`cursor-pointer py-3 px-4 inline-flex items-center gap-2 text-lg font-semibold rounded-xl border ${variant === 'outline' ? 'border-current' : 'border-transparent'} ${variants[variant]} disabled:opacity-50`}
>
  <slot/>
</Element>
