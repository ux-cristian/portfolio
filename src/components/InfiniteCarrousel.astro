---
interface Props {
  words: string[];
}

const { words } = Astro.props;
---

<div class="w-full">
  <div class="flex gap-40 animate-wiggle w-full">
    <span>Palabra 1</span>
    <span>Palabra 2</span>
    <span>Palabra 3</span>
    <span>Palabra 4</span>
    <span>Palabra 5</span>
        <span>Palabra 1</span>
    <span>Palabra 2</span>
    <span>Palabra 3</span>
    <span>Palabra 4</span>
    <span>Palabra 5</span>
  </div>
