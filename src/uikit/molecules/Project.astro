---
import Image from "astro/components/Image.astro";

const {
  title = "Título del proyecto",
  category = "Categoria",
  description = "Descripción.",
  imageUrl = "#",
  projectId,
  href,
} = Astro.props;
---
<a href={href} class="w-full">
  <article id={projectId} class="flex flex-col w-full rounded-xl overflow-clip md:flex-row relative shadow-md hover:shadow-xl transition-shadow duration-300">
  <div class="absolute top-4 left-4 md:top-6 md:left-6 xl:top-8 xl:left-8">
    <span class="ml-auto px-4 py-1 rounded-full bg-primary-100 text-sm md:text-base xl:text-lg font-medium text-primary-700">{category}</span>
  </div>
  <img src={imageUrl} alt={`Foto del proyecto ${title}`} class="bg-primary-200 object-cover w-full h-44 md:h-96">
  <div class="flex flex-col w-full bg-gray-50 py-5 px-4 gap-4 md:pt-9 md:pb-6 md:px-8 md:gap-5 xl:px-10 xl:pt-10 xl:gap-6">
    <div class="flex flex-col gap-2 md:gap-2.5 xl:gap-3">
      <h3 class="text-xl md:text-2xl xl:text-3xl font-semibold text-gray-800">{title}</h3>
      <p class="md:text-lg xl:text-xl text-gray-800 line-clamp-6">{description}</p>
    </div>
    <a href={href} class="text-primary-600 md:text-lg xl:text-xl font-semibold hover:underline ml-auto mt-auto">Ver proyecto</a>
  </div>
</article>
</a>

