---
interface ExperienceProps {
    title: string;
    company: string;
    startDate: string;
    endDate: string;
    description: string;
}

const { title, company, startDate, endDate, description } = Astro.props;
---

<article class="flex gap-4 md:gap-6 xl:pl-4">
    <div class="flex flex-col items-center pt-1.5 md:pt-2.5 xl:pt-3 h-full">
        <div class="w-3 h-3 md:w-3.5 md:h-3.5 xl:h-4 xl:w-4 bg-primary-600 rounded-full z-10"></div>
        <div class="w-0.5 h-full bg-gray-300 rounded-full -m-0.5"></div>
    </div>
    <div class="flex flex-col md:pb-2 xl:pb-4 gap-4 md:flex-row font-sans text-gray-700">
        <div class="flex flex-col gap-2 w-full">
            <h3 class="text-xl md:text-2xl xl:text-3xl font-semibold text-primary-600">{title}</h3>
            <span class="text-xl md:text-2xl xl:text-3xl font-semibold">{company}</span>
            <span class="md:text-lg xl:text-xl font-medium">{startDate} - {endDate}</span>
        </div>
        <p class="md:text-lg xl:text-xl w-full">{description}</p>
    </div>
</article>

